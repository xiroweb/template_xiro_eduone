<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>xiroeduone</name>
	<version>1.0</version>
	<creationDate>24/08/2020</creationDate>
	<author>XiroWeb</author>
	<authorEmail>support@xiroweb.com</authorEmail>
	<copyright>Copyright (C) 2020 XiroWeb. All rights reserved.</copyright>
	<description>TPL_XIROEDUONE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>cotrai</position>
		<position>cotphai</position>
		<position>dautrang</position>
		<position>chantrang</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_xiroeduone.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_xiroeduone.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="templateColor" 
					type="color" 
					label="TPL_XIROEDUONE_COLOR_LABEL"
					description="TPL_XIROEDUONE_COLOR_DESC" 
					class="" 
					default="#08C"
				/>

				<field 
					name="templateBackgroundColor" 
					type="color" 
					label="TPL_XIROEDUONE_BACKGROUND_COLOR_LABEL"
					description="TPL_XIROEDUONE_BACKGROUND_COLOR_DESC" 
					class="" 
					default="#F4F6F7"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_XIROEDUONE_LOGO_LABEL"
					description="TPL_XIROEDUONE_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="sitetitle"  
					type="text" 
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string" 
				/>

				<field 
					name="sitedescription"  
					type="text" 
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string" 
				/>

				<field 
					name="googleFont"
					type="radio"
					label="TPL_XIROEDUONE_FONT_LABEL"
					description="TPL_XIROEDUONE_FONT_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field 
					name="googleFontName" 
					type="text" 
					label="TPL_XIROEDUONE_FONT_NAME_LABEL"
					description="TPL_XIROEDUONE_FONT_NAME_DESC" 
					class="" 
					default="Open+Sans"
					showon="googleFont:1" 
				/>

				<field 
					name="fluidContainer"
					type="radio"
					label="TPL_XIROEDUONE_FLUID_LABEL"
					description="TPL_XIROEDUONE_FLUID_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">TPL_XIROEDUONE_FLUID</option>
					<option value="0">TPL_XIROEDUONE_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
